{{icon-button
    onClick=(action tooglePause)
    buttonIcon=buttonIcon
}}
{{input
    disabled=true
    class="position-slider"
    type="range" 
    value=hifi.position
    min=0 
    max=hifi.duration 
    step=1000
}}
{{icon-button
    onClick=(action rewind)
    buttonIcon=consts.materialIcon.replay_5
}}
{{icon-button
    onClick=(action fastForward)
    buttonIcon=consts.materialIcon.forward_5
}}